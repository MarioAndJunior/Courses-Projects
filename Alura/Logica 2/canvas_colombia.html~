<canvas id="tela" width="600" height="400"></canvas>
//colombia
<script>

var tela = document.getElementById("tela");

var p = tela.getContext("2d");

p.fillStyle = "yellow";
p.fillRect(0, 0, 600, 200);

p.fillStyle = "blue";
p.fillRect(0, 200, 600, 300);

p.fillStyle = "red";
p.fillRect(0, 300, 600, 400);

</script>

